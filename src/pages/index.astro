---
import Layout from "../layouts/Layout.astro";
import ProductItem from "../components/productitem.astro";
import Comments from "../components/comments.astro";
---

<Layout>
	<section class="bg-black text-white py-1 relative">
		<div class="text-center container">
			<p>
				Sign up and get 20% off to your first order. <a
					href="#"
					class="underline">Sign Up Now</a
				>
			</p>
		</div>
		<button type="button" class="absolute top-1 right-2">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				><path
					fill="currentColor"
					d="M6.4 19L5 17.6l5.6-5.6L5 6.4L6.4 5l5.6 5.6L17.6 5L19 6.4L13.4 12l5.6 5.6l-1.4 1.4l-5.6-5.6z"
				></path>
			</svg>
		</button>
	</section>

	<nav class="bg-white shadow">
		<div class="container flex items-center">
			<div class="flex items-center gap-5">
				<img src="https://placehold.co/100x30" alt="logo" />
				<ul class="flex justify-center space-x-4 py-4">
					<li>
						<a href="#" class="text-gray-700 hover:text-gray-900">Home</a>
					</li>
					<li>
						<a href="#new-arrivals" class="text-gray-700 hover:text-gray-900"
							>Shop</a
						>
					</li>
					<li>
						<a href="#" class="text-gray-700 hover:text-gray-900">About</a>
					</li>
					<li>
						<a href="#" class="text-gray-700 hover:text-gray-900">Contact</a>
					</li>
				</ul>
			</div>
			<div class="flex-1">
				<input
					type="text"
					placeholder="Search..."
					class="ml-4 w-80 border border-gray-300 rounded-md px-4 py-1 focus:outline-none focus:ring-2 focus:ring-blue-500"
				/>
			</div>
			<div>
				<button class="pl-2 mr-3">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
					>
						<path
							fill="currentColor"
							fill-rule="evenodd"
							d="M8 7V6a4 4 0 1 1 8 0v1h3c.552 0 1 .449 1 1.007v12.001c0 1.1-.895 1.992-1.994 1.992H5.994A1.994 1.994 0 0 1 4 20.008v-12C4 7.45 4.445 7 5 7zm1.2 0h5.6V6a2.8 2.8 0 0 0-5.6 0zM8 8.2H5.2v11.808c0 .436.356.792.794.792h12.012a.794.794 0 0 0 .794-.792V8.2H16V11h-1.2V8.2H9.2V11H8z"
						></path>
					</svg>
				</button>
				<button>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						><g fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"
							><path
								d="M16 9a4 4 0 1 1-8 0a4 4 0 0 1 8 0m-2 0a2 2 0 1 1-4 0a2 2 0 0 1 4 0"
							></path><path
								d="M12 1C5.925 1 1 5.925 1 12s4.925 11 11 11s11-4.925 11-11S18.075 1 12 1M3 12c0 2.09.713 4.014 1.908 5.542A8.99 8.99 0 0 1 12.065 14a8.98 8.98 0 0 1 7.092 3.458A9 9 0 1 0 3 12m9 9a8.96 8.96 0 0 1-5.672-2.012A6.99 6.99 0 0 1 12.065 16a6.99 6.99 0 0 1 5.689 2.92A8.96 8.96 0 0 1 12 21"
							></path></g
						></svg
					>
				</button>
			</div>
		</div>
	</nav>

	<header class="mt-4">
		<div class="container">
			<div class="flex gap-4">
				<section>
					<section>
						<h1 class="text-5xl font-bold mt-5">
							FIND CLOTHES THAT MATCHES YOUR STYLE
						</h1>
						<p class="text-gray-500 mt-2">
							Browse through our diverse range of meticulously crafted garments,
							designed to bring out your individuality and cater to your sense
							of style.
						</p>
						<div class="mt-4">
							<a
								href="#"
								class="bg-black mt-4 text-white py-3 px-14 inline-block rounded-full hover:bg-gray-700 transition"
								>Shop now</a
							>
						</div>
					</section>
					<section class="mt-10">
						<ul class="flex divide-x-2">
							<li class="stats-item">
								<strong>200+</strong>
								<small>International Brands</small>
							</li>
							<li class="stats-item">
								<strong>2,000+</strong>
								<small>High-Quality Products</small>
							</li>
							<li class="stats-item">
								<strong>30,000+</strong>
								<small>Happy Customers</small>
							</li>
						</ul>
					</section>
				</section>
				<section>
					<img src="https://placehold.co/800x800" alt="logo" />
				</section>
			</div>
		</div>
	</header>

	<section class="bg-black">
		<div class="container">
			<div class="flex flex-wrap justify-center gap-8 py-4">
				<img src="https://placehold.co/200x70" alt="" />
				<img src="https://placehold.co/200x70" alt="" />
				<img src="https://placehold.co/200x70" alt="" />
				<img src="https://placehold.co/200x70" alt="" />
				<img src="https://placehold.co/200x70" alt="" />
			</div>
		</div>
	</section>

	<section id="new-arrivals">
		<div class="container">
			<div class="text-center my-10">
				<h1 class="text-3xl font-bold">NEW ARRIVALS</h1>
			</div>
			<ul class="flex gap-8 flex-wrap justify-center">
				<ProductItem
					name="Product Name"
					price="99.99"
					star="4.5"
					img="https://placehold.co/200x200"
				/>
				<ProductItem
					name="Product Name"
					price="99.99"
					star="4.5"
					img="https://placehold.co/200x200"
				/>
				<ProductItem
					name="Product Name"
					price="99.99"
					sale={{ percentage: 20, price: "79.99" }}
					star="4"
					img="https://placehold.co/200x200"
				/>
				<ProductItem
					name="Product Name"
					price="99.99"
					sale={{ percentage: 20, price: "79.99" }}
					star="3.5"
					img="https://placehold.co/200x200"
				/>
			</ul>
			<div class="mt-10 text-center border-b-2 border-zinc-300 pb-12">
				<a
					href="#"
					class="border border-gray-400 px-10 py-2 rounded-full hover:shadow-md hover:shadow-slate-500 transition"
					>View All</a
				>
			</div>
		</div>
	</section>

	<section>
		<div class="container">
			<div class="text-center my-10">
				<h1 class="text-3xl font-bold">TOP SELLING</h1>
			</div>
			<ul class="flex gap-8 flex-wrap justify-center">

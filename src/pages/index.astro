		<style>
			.stats-item {
				@apply flex flex-col gap-1 px-8 first:pl-0 last:pr-0;
			}
			.stats-item strong {
				@apply text-3xl font-bold;
			}
			.stats-item small {
				@apply text-gray-500;
			}
			.product-name {
				@apply mt-2 font-semibold;
			}
			.set-of-clothes {
				@apply border border-gray-300 bg-white rounded-3xl block
